                    "SettingsPanelMessage:CheckChanges:modinfo_tab3",
                    "SettingsPanelMessage:CheckChanges:modinfo_tab4",
                    "SettingsPanelMessage:CheckChanges:modinfo_tab5",
                    "SettingsPanelMessage:CheckChanges:modinfo_tab6",
                    "SettingsPanelMessage:CheckChanges:modinfo_tab7"
